{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Détails du Livre</h1>

    <div class="row mb-4">
        <!-- Colonne pour l'image, décalée légèrement à droite -->
        <div class="col-md-4 d-flex justify-content-center ml-3">
            {% if livre.image %}
                <img src="{{ asset('uploads/livres/' ~ livre.image) }}" 
                     class="img-fluid" 
                     alt="{{ livre.titre }}" 
                     style="height: 300px; object-fit: cover;"> <!-- Hauteur ajustée -->
            {% else %}
                <img src="{{ asset('images/default.png') }}" 
                     class="img-fluid" 
                     alt="Image par défaut" 
                     style="height: 300px; object-fit: cover;"> <!-- Hauteur ajustée -->
            {% endif %}
        </div>

        <!-- Colonne pour les informations du livre et les boutons sous l'image -->
        <div class="col-md-8">
            <h5>{{ livre.titre }}</h5>
            <p><strong>ISBN :</strong> {{ livre.ISBN }}</p>
            <p><strong>Disponibilité :</strong> 
                {{ livre.disponibilite ? 'Disponible' : 'Non disponible' }}
            </p>
            <p><small class="text-muted">ID : {{ livre.id }}</small></p>

            <div class="d-flex mt-3">
                <!-- Boutons sous l'image -->
                <a href="{{ path('app_livre_index') }}" class="btn btn-primary me-2">Retour à la liste</a>
                
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-primary mr-2">Modifier</a>
            </div>
        </div>
    </div>
{% endblock %}








